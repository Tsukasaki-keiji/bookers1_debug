<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
   <div><%= @book.errors.count %> error prohibited this book from being saved:</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Update Book' %>

<% end %>


<%= link_to 'Show', book_path(@book), class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
